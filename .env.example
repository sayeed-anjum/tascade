# Tascade Environment Variables
# Copy this file to .env and fill in values.

# Database connection string (required)
# For local development with PostgreSQL:
TASCADE_DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/tascade

# Disable authentication (set to 1 for local development only; never in production)
TASCADE_AUTH_DISABLED=1

# Override path to SQL migration files (optional)
# TASCADE_DB_MIGRATIONS_DIR=docs/db/migrations

# Frontend environment variables (set in web/.env or pass to Vite)
# VITE_API_BASE_URL=http://localhost:8000
# VITE_API_TOKEN=tsk_your_api_key_here
